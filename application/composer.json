{
    "name": "lukasz/aws-stress-test",
    "description": "Repository for compare performance of different AWS instances",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "lzakrzewski",
            "email": "contact@lzakrzewski.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Wall\\": "src/Wall"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.0",

        "ramsey/uuid": "~3.0",
        "incenteev/composer-parameter-handler": "~2.0",

        "php-di/php-di": "~5.4",
        "simple-bus/message-bus": "~2.2",

        "zendframework/zend-diactoros": "~1.3.7"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~1.12",
        "squizlabs/php_codesniffer": "~2.3",
        "phpmd/phpmd": "~2.2",
        "mayflower/php-codebrowser": "~1.1",

        "phpunit/phpunit": "~5.6",
        "behat/behat": "~3.2"
    },
    "scripts": {
        "static-analysis": [
            "./bin/php-cs-fixer fix --config-file=build/.php_cs",
            "./bin/phpcs --standard=./build/phpcs.xml --extensions=php src tests",
            "./bin/phpmd src,tests text ./build/phpmd.xml"
        ],
        "static-analysis-ci": [
            "./bin/php-cs-fixer fix --dry-run --config-file=build/.php_cs",
            "./bin/phpcs --standard=./build/phpcs.xml --extensions=php src tests",
            "./bin/phpmd src,tests text ./build/phpmd.xml"
        ],
        "unit-test": [
            "./bin/phpunit --testsuite unit "
        ],
        "behat": "./bin/behat --format=progress --out=std",
        "test": [
            "@static-analysis",
            "@unit-test",
            "@behat"
        ],
        "test-ci": [
            "@static-analysis-ci",
            "@unit-test",
            "@behat"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "minimum-stability": "stable"
}
