{
    "name": "lukasz/aws-stress-test",
    "description": "Repository for compare performance of different AWS instances",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "lzakrzewski",
            "email": "contact@lzakrzewski.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Wall\\": "src/Wall"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.0",

        "ramsey/uuid": "~3.0",
        "incenteev/composer-parameter-handler": "~2.0",
        "webmozart/assert": "~1.1.0",
        "predis/predis": "~1.1.1",
        "piwik/device-detector": "3.7.3",
        "doctrine/cache": "~1.6.1",

        "php-di/php-di": "~5.4",
        "twig/twig": "~1.26",
        "simple-bus/message-bus": "~2.2",
        "symfony/yaml": "3.1.5",

        "zendframework/zend-diactoros": "~1.3.7"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~1.12",
        "squizlabs/php_codesniffer": "~2.3",
        "phpmd/phpmd": "~2.2",
        "mayflower/php-codebrowser": "~1.1",

        "phpunit/phpunit": "~5.6",
        "phpspec/phpspec": "~3.0",
        "behat/behat": "~3.2",

        "symfony/browser-kit": "~3.1.5"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "cache-clear": [
            "rm -rf var/cache/*"
        ],
        "static-analysis": [
            "./bin/php-cs-fixer fix --config-file=artifacts/.php_cs",
            "./bin/phpcs --standard=./artifacts/phpcs.xml --extensions=php src tests",
            "./bin/phpmd src,tests text ./artifacts/phpmd.xml"
        ],
        "static-analysis-ci": [
            "./bin/php-cs-fixer fix --dry-run --config-file=artifacts/.php_cs",
            "./bin/phpcs --standard=./artifacts/phpcs.xml --extensions=php src tests",
            "./bin/phpmd src,tests text ./artifacts/phpmd.xml"
        ],
        "unit-test": [
            "./bin/phpunit --testsuite unit",
            "./bin/phpspec run"
        ],
        "integration-test": [
            "./bin/phpunit --testsuite integration"
        ],
        "behat": "./bin/behat --format=progress --out=std",
        "test": [
            "@static-analysis",
            "@unit-test",
            "@cache-clear",
            "@integration-test",
            "@behat"
        ],
        "test-ci": [
            "@static-analysis-ci",
            "@unit-test",
            "@cache-clear",
            "@integration-test",
            "@behat"
        ]
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "incenteev-parameters": {
            "file": "config/parameters.yml"
        }
    },
    "minimum-stability": "stable"
}
